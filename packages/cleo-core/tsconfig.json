{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "outDir": "dist",
        "sourceMap": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}